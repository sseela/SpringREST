<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>  
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>    
        <property name="hibernate.connection.username">sqlgen</property>    
        <property name="hibernate.connection.password">Database@8790</property>    
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=master</property> 
        
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServer2008Dialect</property>  
        <property name="hibernate.show_sql">true</property>      
        <property name="hibernate.hbm2ddl.auto">update</property>    
        <mapping class="com.cg.entities.Student"></mapping>

</session-factory>
</hibernate-configuration>